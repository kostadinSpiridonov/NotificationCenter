@model IEnumerable<NotificationCenter.Web.Models.NotificationViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Notifications</h1>

<input type="submit" id="simulate" class="btn btn-light" value="Simulate Request Update" />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
        </tr>
    </thead>
    <tbody id="notifications">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/notifications/notifications.js"></script>
}